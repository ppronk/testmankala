<?xml version="1.0" encoding="UTF-8"?>
<project name="module_mankalanieuw" default="compile.module.mankalanieuw">
  <dirname property="module.mankalanieuw.basedir" file="${ant.file.module_mankalanieuw}"/>
  
  <property name="module.jdk.home.mankalanieuw" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mankalanieuw" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mankalanieuw" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mankalanieuw" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="mankalanieuw.output.dir" value="${module.mankalanieuw.basedir}/out/production/MankalaNieuw"/>
  <property name="mankalanieuw.testoutput.dir" value="${module.mankalanieuw.basedir}/out/test/MankalaNieuw"/>
  
  <path id="mankalanieuw.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mankalanieuw.module.production.classpath">
    <path refid="${module.jdk.classpath.mankalanieuw}"/>
  </path>
  
  <path id="mankalanieuw.runtime.production.module.classpath">
    <pathelement location="${mankalanieuw.output.dir}"/>
  </path>
  
  <path id="mankalanieuw.module.classpath">
    <path refid="${module.jdk.classpath.mankalanieuw}"/>
    <pathelement location="${mankalanieuw.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit.jar"/>
  </path>
  
  <path id="mankalanieuw.runtime.module.classpath">
    <pathelement location="${mankalanieuw.testoutput.dir}"/>
    <pathelement location="${mankalanieuw.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.mankalanieuw">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mankalanieuw">
    <patternset refid="excluded.from.module.mankalanieuw"/>
  </patternset>
  
  <path id="mankalanieuw.module.sourcepath">
    <dirset dir="${module.mankalanieuw.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="mankalanieuw.module.test.sourcepath">
    <dirset dir="${module.mankalanieuw.basedir}">
      <include name="Test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mankalanieuw" depends="compile.module.mankalanieuw.production,compile.module.mankalanieuw.tests" description="Compile module MankalaNieuw"/>
  
  <target name="compile.module.mankalanieuw.production" depends="register.custom.compilers" description="Compile module MankalaNieuw; production classes">
    <mkdir dir="${mankalanieuw.output.dir}"/>
    <javac2 destdir="${mankalanieuw.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mankalanieuw}/javac">
      <compilerarg line="${compiler.args.mankalanieuw}"/>
      <bootclasspath refid="mankalanieuw.module.bootclasspath"/>
      <classpath refid="mankalanieuw.module.production.classpath"/>
      <src refid="mankalanieuw.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mankalanieuw"/>
    </javac2>
    
    <copy todir="${mankalanieuw.output.dir}">
      <fileset dir="${module.mankalanieuw.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mankalanieuw.tests" depends="register.custom.compilers,compile.module.mankalanieuw.production" description="compile module MankalaNieuw; test classes" unless="skip.tests">
    <mkdir dir="${mankalanieuw.testoutput.dir}"/>
    <javac2 destdir="${mankalanieuw.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mankalanieuw}/javac">
      <compilerarg line="${compiler.args.mankalanieuw}"/>
      <bootclasspath refid="mankalanieuw.module.bootclasspath"/>
      <classpath refid="mankalanieuw.module.classpath"/>
      <src refid="mankalanieuw.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.mankalanieuw"/>
    </javac2>
    
    <copy todir="${mankalanieuw.testoutput.dir}">
      <fileset dir="${module.mankalanieuw.basedir}/Test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.mankalanieuw" description="cleanup module">
    <delete dir="${mankalanieuw.output.dir}"/>
    <delete dir="${mankalanieuw.testoutput.dir}"/>
  </target>
</project>